    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch (vscode)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/ray.exe",
            "cwd": "${workspaceFolder}/build",
            "args": [],
            "stopAtEntry": false,
            "environment": [],
            "console": "internalConsole",
        },
        {
            "name": "Launch (gdb)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/ray",
            "cwd": "${workspaceFolder}/build",
            "args": [],
            "stopAtEntry": false,
            "MIMode": "gdb",
            "environment": [],
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description":  "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}